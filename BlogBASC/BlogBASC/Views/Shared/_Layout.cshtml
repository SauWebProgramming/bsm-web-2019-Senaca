<!DOCTYPE html>
<html>
<head>

    <!--- basic page needs
    ================================================== -->

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BASC Blog</title>
    <meta name="description" content="">
    <meta name="author" content="">

    @Scripts.Render("~/bundles/modernizr")


    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="~/Content/css/base.css">
    <link rel="stylesheet" href="~/Content/css/vendor.css">
    <link rel="stylesheet" href="~/Content/css/main.css">
    <link rel="stylesheet" href="~/Content/css/iconic/css/iconmonstr-iconic-font.css" />
    <link rel="stylesheet" href="~/Content/css/iconic/css/iconmonstr-iconic-font.min.css" />





    <!-- fonts
    ================================================== -->
    <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">

</head>

<body id="top">
    
    <!-- header
    ================================================== -->
    <header class="s-header">

        <nav class="header-nav-wrap" style="padding-bottom:10px;">
            <ul class="header-nav">
                <li class="current">  @Html.ActionLink(BlogBASC.Resources.HomeTexts.Home , "Index", "Home", new { name = "homelink" })</li>
                <li><  @Html.ActionLink("Blog", "Blog", "Home", new { name = "blink" })</li>
                <li>
                    @Html.ActionLink(BlogBASC.Resources.HomeTexts.Contact, "Contact", "Home", new { name = "clink" })
                </li>
                <li>@Html.ActionLink(BlogBASC.Resources.HomeTexts.Language, "Index","Language")</li>

                @Html.Partial("_LoginPartial")
            </ul>
          
        </nav>

        <a class="header-menu-toggle" href="#0"><span>Menu</span></a>

    </header> <!-- end s-header -->


    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>

        </div>
    </div>

    @RenderBody()



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")
    @RenderSection("scripts", required: false)
</body>
</html>
